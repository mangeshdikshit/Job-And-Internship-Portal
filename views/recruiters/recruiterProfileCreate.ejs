<% layout('rBoilerplate.ejs') -%>
<body>
  
  <nav class="navbar navbar-expand-md bg-dark navbar-dark sticky-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="/jobAndIntern/<%= _id %>/dashboard">
        Job And Internship
      </a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
            <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/jobAndIntern/<%= _id %>/jobPosting">Post a Job</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/jobAndIntern/<%= _id %>/postedJobs">Posted Jobs</a>
            </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/jobAndIntern/<%= _id %>/recruiterProfile">My Profile</a>
          </li>
          
        </ul>
      </div>
    </div>
  </nav>

  <h2 style="color: #404040; font-weight: 700; text-align: center;" class="mt-4">Update Profile</h2>

    <h5 style="color: #5c5c5c; font-weight: 700; text-align: center;" class="mt-4"><%= name %>
    </h5>
    <h5 style="color: #5c5c5c; font-weight: 700; text-align: center;" ><%= email %>
    </h5>

    <div class="row">
      <div class="col-8 offset-2 mt-4">
        <form action="/jobAndIntern/<%= _id %>/recruiterProfileCreate" method="post" class="needs-validation"
          novalidate>
    
            <div class="mb-3">
              <label for="overview" class="form-lable">Overview: </label>
              <textarea name="overview" id="overview" class="form-control"  rows="10" placeholder="Information about company." required></textarea>
              <div class="invalid-feedback">
                Please Enter this feild!
              </div>
            </div>

            <div class="mb-3">
              <label for="website" class="form-lable">Website: </label>
              <textarea name="website" id="website" class="form-control" placeholder="Website link of company's official website" required></textarea>
              <div class="invalid-feedback">
                Please Enter this feild!
              </div>
            </div>

            <div class="mb-3">
              <label for="industry" class="form-lable">Industry: </label>
              <textarea name="industry" id="industry" class="form-control" placeholder="IT Services and IT Consulting" required></textarea>
              <div class="invalid-feedback">
                Please Enter this feild!
              </div>
            </div>

            <div class="mb-3">
              <label for="companySize" class="form-lable">Company Size: </label>
              <textarea name="companySize" id="companySize" class="form-control" placeholder="10000+ employees" required></textarea>
              <div class="invalid-feedback">
                Please Enter this feild!
              </div>
            </div>

            <div class="mb-3">
              <label for="headquarters" class="form-lable">Headquarters: </label>
              <textarea name="headquarters" id="headquarters" class="form-control" placeholder="city, state" required></textarea>
              <div class="invalid-feedback">
                Please Enter this feild!
              </div>
            </div>

            <div class="mb-3">
              <label for="specialties" class="form-lable">specialties: </label>
              <textarea name="specialties" id="specialties" class="form-control" rows="10" placeholder="Specialties of company." required></textarea>
              <div class="invalid-feedback">
                Please Enter this feild!
              </div>
            </div>
            




            <button class="btn btn-dark mb-3">Update</button>
        </form>
      </div>
    </div>

    


    
</body>
