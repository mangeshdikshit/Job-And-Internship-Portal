<% layout('cBoilerplate.ejs') -%>
<body>
    <nav class="navbar navbar-expand-md bg-dark navbar-dark sticky-top">
        <div class="container-fluid">
          <a class="navbar-brand" href="/jobAndIntern/<%= profile._id %>/dashboard">
            Job And Internship
          </a>
    
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
    
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/jobAndIntern/<%=profile._id %>/jobs">Jobs</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/jobAndIntern/<%=profile._id %>/appliedJobs">Applied Jobs</a>
                </li>
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/jobAndIntern/<%=profile._id %>/profile">My Profile</a>
              </li>
              
            </ul>
          </div>
        </div>
      </nav>

      <h2 style="color: #404040; font-weight: 700; text-align: center;" class="mt-4">Applied Jobs</h2>

      <table class="table mt-4">
        <thead>
          <tr class="table-primary">
            <th scope="col">#</th>
            <th scope="col">Company</th>
            <th scope="col">Job Title</th>
            <th scope="col">Location</th>
            <th scope="col">Salary</th>
            <th scope="col">Job Description</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i of appliedJobs) { %>
            <tr>
              <th scope="row"><%= counter++ %></th>
              <td><%= i.company.profile.name %></td>
              <td><%= i.jobTitle %></td>
              <td><%= i.location %> (<%= i.locationType %>) &nbsp; <%= i.jobType %></td>
              <td><%= i.to.toLocaleString() %>&#8377; - <%= i.from.toLocaleString() %>&#8377;</td>
              <td>
                <form action="/jobAndIntern/<%= profile._id %>/jobs/<%= i._id %>" method="get">
                  <button class="btn btn-dark">Details</button>
                </form>
              </td>
            </tr>
            <% } %>
          
        </tbody>
      </table>

      
</body>